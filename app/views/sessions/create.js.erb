<% if @user.nil? %>
  var errors = "";
  <% flash.each do |name, msg| %>
    errors += "<%= escape_javascript(msg) %>"
  <% end %>
  $('#login-form #errors').text(errors);
<% else %>
  $('.featherlight').remove();
  $('#login-signup').remove();
  $('.logo').html("<%= j (render partial: 'create', layout: false) %>");
<% end %>

