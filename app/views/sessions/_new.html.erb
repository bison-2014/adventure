<div id='login-form'>
<h2>Log In</h2>
  <div id='errors'>
  </div>

  <%=form_tag log_in_path, remote: true, id: "login_form" do%>
    <%=label_tag :email %>
    <%=text_field_tag :email %><br>
    <%=label_tag :password %>
    <%=password_field_tag :password %><br>
    <%=submit_tag "Log in" %>
  <%end%><br><br><br><br>
  <div id="signup_link"><%= link_to 'Sign Up', new_user_path %></div>
</div>
